from pywinauto import Application

# Change Avatar
account_link = self.driver.find_element(By.LINK_TEXT, "Account")
account_link.click()
time.sleep(1)
self.driver.implicitly_wait(5)
user_avatar = self.driver.find_element(By.ID, "user_avatar")
user_avatar.click()
time.sleep(1)

# click on id user_avatar <update>
