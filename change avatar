# using pywinauto to control <update>
app = Application().connect(title='Open')
dlg = app.Open
dlg.Edit.set_edit_text('C:\\Desktop\\Avatar.png')
dlg.Button.click()

self.driver.implicitly_wait(5)
upload_avatar_button = self.driver.find_element(By.ID, "upload-avatar-button")
upload_avatar_button.click()
